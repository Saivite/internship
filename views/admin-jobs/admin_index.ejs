<% layout('./layouts/boilerplate')%>
<div class="col-10 offset-1">
<h1>All Jobs</h1>
<div>
  <a class = "btn btn-secondary" href="/admin/AllJobs/new">Add A new Job</a>
</div>
<% for(let job of jobs){ %>

  <div class="card mb-4">
    <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= job.title %></h5>
          <p class="card-text"><%= job.description %></p>
          <p class="card-text">
          <small class="text-muted"><%= job.location%></small>
          </p>
          <a href="/admin/AllJobs/<%=job._id%>" class="btn btn-primary">More Info</a>


        </div>
    </div>
  </div>
  <% } %>
</div>

</div>


