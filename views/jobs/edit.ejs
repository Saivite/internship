<% layout('./layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit for <%=job.position %></h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/jobs/<%= job._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="col-md-6">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          name="job[email]"
          id="email"
          value="<%=job.email%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="col-md-6">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          name="job[name]"
          class="form-control"
          id="name"
          value="<%=job.name%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="col-12">
        <label for="address" class="form-label">Address</label>
        <input
          type="text"
          class="form-control"
          id="address"
          placeholder="1234 Main St"
          name="job[address]"
          value="<%=job.address %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="col-md-6">
        <label for="currentPosition" class="form-label">Current Position</label>
        <input
          type="text"
          class="form-control"
          id="currentPosition"
          name="job[currentPosition]"
          value="<%=job.currentPosition %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="col-md-6">
        <label for="location" class="form-label">Preferred Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="jobData[location]"
          value="jobData[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="col-md-3">
        <label for="gender" class="form-label">Gender</label>
        <select id="gender" name="jobData[gender]" class="form-select" required>
          <option value="">Choose...</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="col-md-4">
        <label for="mobile" class="form-label">Mobile Number</label>
        <input
          type="number"
          class="form-control"
          id="number"
          name="job[mobile]"
          value="<%=job.number% %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      <a href="/jobs/<%=job._id %>">Back to Job</a>
    </form>
  </div>
</div>
