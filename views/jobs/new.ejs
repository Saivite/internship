<% layout('./layouts/boilerplate')%>

<div class="row">
  <h1 class="text-center">Apply for Job</h1>
  <div class="col-6 offset-3">
    <form action="/jobs/<%= job._id %>" method="POST" class="row g-3">
      <div class="col-md-6">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" name="job[email]" id="email" />
      </div>
      <div class="col-md-6">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="job[name]" class="form-control" id="name" />
      </div>
      <div class="col-12">
        <label for="address" class="form-label">Address</label>
        <input
          type="text"
          class="form-control"
          id="address"
          placeholder="1234 Main St"
          name="job[address]"
        />
      </div>

      <div class="col-md-6">
        <label for="currentPosition" class="form-label">Current Position</label>
        <input
          type="text"
          class="form-control"
          id="currentPosition"
          name="job[currentPosition]"
        />
      </div>
      <div class="col-md-4">
        <label for="location" class="form-label">Preferred Location</label>
        <select id="location" class="form-select">
          <option selected>Choose...</option>
          <option>Kolkata</option>
          <option>Jamshedpur</option>
          <option>Chennai</option>
          <option>Bangalore</option>
          <option>Hyderabad</option>
          <option>Delhi</option>
        </select>
      </div>

      <div class="col-md-2">
        <label for="gender" class="form-label">Gender</label>
        <select id="gender" class="form-select">
          <option selected>Choose...</option>
          <option>Male</option>
          <option>Female</option>
        </select>
      </div>

      <div class="col-md-4">
        <label for="mobile" class="form-label">Mobile Number</label>
        <input
          type="number"
          class="form-control"
          id="number"
          name="job[number]"
        />
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

