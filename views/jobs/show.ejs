<% layout('./layouts/boilerplate')%>

<div class="row mb-3">
  <div class="col-6">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= job.position %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= job.location %></h6>
        <p class="card-text"><%= job.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Skills Required: <% const ar1 = job.skills.split(',') %>
          <%ar1.forEach((skill) => { %>
          <a class="btn btn-info" href="#"><%= skill %></a>
          <% }) %>
        </li>

        <li class="list-group-item">
          Eligibility: <% const ar2 = job.eligibility.split(',') %>
          <%ar2.forEach((eligible) => { %>
          <a class="btn btn-info" href="#"><%= eligible %></a>
          <% }) %>
        </li>

        <li class="list-group-item">Salary: Rs <%= job.payment %></li>
        <li class="list-group-item">Experience: <%= job.experience %></li>
      </ul>
      <div class="card-footer text-muted">
        <%=job.jobsData.length %> Employees has Applied for this Post
      </div>
    </div>
  </div>

  <div class="col-6">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title text-muted">
          Opening Date: <%= job.openingDate %>
        </h5>
        <h5 class="card-subtitle mb-2">Closing Date: <%= job.closingDate %></h5>
        <p class="card-text">Business HR: <%= job.businessHR %></p>
      </div>
      <div class="card-body">
        <a class="card-link btn btn-primary" href="/jobs/<%=job._id %>/apply%>"
          >Apply</a
        >
        <a href="/jobs" class="card-link btn btn-info">All Jobs</a>
      </div>
    </div>
  </div>
</div>
